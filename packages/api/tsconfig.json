{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/routes/*": ["./src/routes/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/models/*": ["./src/models/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/util/*": ["./src/util/*"],
      "@/jobs/*": ["./src/jobs/*"],
      "@/templates/*": ["./src/templates/*"]
    }
  },
  "include": ["src", "tests"]
}
