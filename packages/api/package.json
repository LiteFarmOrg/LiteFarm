{
  "name": "litefarm-api",
  "version": "3.4.0",
  "description": "LiteFarm API server",
  "main": "./api/src/server.js",
  "type": "module",
  "scripts": {
    "test": "jest --runInBand",
    "test-ci": "NODE_ENV=pipeline jest --runInBand --forceExit",
    "test-end2end": "jest endToEnd",
    "jest-w": "jest --watch",
    "start": "set NODE_ENV=development&& node src/server.js",
    "start:prod": "node src/server.js",
    "nodemon": "set NODE_ENV=development && nodemon --inspect=0.0.0.0:9230 src/server.js",
    "debug-email-template": "set NODE_ENV=development&& DEBUG=email-templates nodemon src/server.js",
    "debug-i18n": "set NODE_ENV=development&& DEBUG=i18n:* nodemon src/server.js",
    "production": "NODE_ENV=production node src/server.js",
    "integration": "NODE_ENV=integration node src/server.js",
    "migrate:testing:db": "NODE_ENV=test knex migrate:latest --env=test --knexfile=./.knex/knexfile.js",
    "migrate:dev:db": "knex migrate:latest --knexfile=./.knex/knexfile.js",
    "migrate:make:dev": "knex migrate:latest --knexfile=./.knex/knexfile.js",
    "migrate:make:rollback": "knex migrate:rollback --knexfile=./.knex/knexfile.js",
    "migrate:dev:seed": "knex seed:run --knexfile=./.knex/knexfile.js",
    "migrate:pipeline:db": "NODE_ENV=test knex migrate:latest --env=pipeline --knexfile=./.knex/knexfile.js",
    "migrate:testing:seed": "knex seed:run --env=test --knexfile=./.knex/knexfile.js",
    "migrate:rollback:testing:db": "NODE_ENV=test knex migrate:rollback --env=test --knexfile=./.knex/knexfile.js",
    "i18n-scheduler": "npx i18next 'src/jobs/certification/**/*.js' -c 'src/jobs/locales/i18next-parser.config.js'",
    "scheduler": "cp ../webapp/public/locales/en/crop.json src/jobs/locales/en && cp ../webapp/public/locales/es/crop.json src/jobs/locales/es && cp ../webapp/public/locales/pt/crop.json src/jobs/locales/pt && cp ../webapp/public/locales/fr/crop.json src/jobs/locales/fr && node src/jobs/index.js",
    "lint": "eslint src",
    "fix-lint": "eslint src --fix",
    "precommit": "lint-staged"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "globalSetup": "./jest-global-setup.cjs"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "../shared"
    ]
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.3.14",
    "@sentry/node": "^7.56.0",
    "adm-zip": "^0.4.16",
    "ajv-formats": "^2.1.1",
    "async-file": "^2.0.2",
    "aws-sdk": "^2.931.0",
    "axios": "^0.21.4",
    "bcryptjs": "^2.4.3",
    "bull": "^3.22.9",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "core-js": "^3.24.1",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.4",
    "express": "^4.17.1",
    "express-jwt": "^8.4.1",
    "express-jwt-authz": "^2.4.1",
    "express-oas-generator": "^1.0.44",
    "express-promise-router": "^4.0.1",
    "form-data": "^4.0.0",
    "google-auth-library": "^6.1.3",
    "i18next": "^21.4.0",
    "i18next-fs-backend": "^1.1.4",
    "jsdom": "^16.4.0",
    "json-2-csv": "^3.14.4",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.1",
    "knex": "^2.4.0",
    "lodash": "^4.17.20",
    "multer": "^1.4.2",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.6.0",
    "objection": "^3.0.1",
    "objection-soft-delete": "^1.0.7",
    "pg": "^8.5.1",
    "pug": "^3.0.2",
    "puppeteer": "^13.3.1",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sinon": "^9.1.0",
    "ua-parser-js": "^0.7.28",
    "uuid": "^8.3.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "@babel/plugin-syntax-import-assertions": "^7.18.6",
    "@babel/preset-env": "^7.18.10",
    "@faker-js/faker": "^6.3.1",
    "babel-jest": "^28.1.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-import-meta": "^2.2.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.0.0",
    "i18next-parser": "^5.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.22",
    "prettier": "2.2.1",
    "start-server-and-test": "^1.11.7"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write",
    "*.js": [
      "eslint --quiet --fix"
    ]
  },
  "overrides": {
    "glob-parent@<5.1.2": ">=5.1.2"
  }
}
