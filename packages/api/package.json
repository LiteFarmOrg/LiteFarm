{
  "name": "litefarm-api",
  "version": "3.1.0",
  "description": "backend for LiteFarm",
  "main": "./api/src/server.js",
  "scripts": {
    "test": "jest --runInBand",
    "test-ci": "NODE_ENV=pipeline jest --runInBand --forceExit",
    "test-end2end": "jest endToEnd",
    "jest-w": "jest --watch",
    "start": "set NODE_ENV=development&& node src/server.js",
    "start:prod": "node src/server.js",
    "nodemon": "set NODE_ENV=development&& nodemon src/server.js",
    "debug-email-template": "set NODE_ENV=development&& DEBUG=email-templates nodemon src/server.js",
    "debug-i18n": "set NODE_ENV=development&& DEBUG=i18n:* nodemon src/server.js",
    "production": "NODE_ENV=production node src/server.js",
    "preinstall": "npx npm-force-resolutions",
    "integration": "NODE_ENV=integration node src/server.js",
    "migrate:testing:db": "NODE_ENV=test knex migrate:latest --env=test",
    "migrate:dev:db": "knex migrate:latest",
    "migrate:make:dev": "knex migrate:latest",
    "migrate:dev:seed": "knex seed:run",
    "migrate:pipeline:db": "NODE_ENV=test knex migrate:latest --env=pipeline",
    "migrate:testing:seed": "knex seed:run --env=test",
    "migrate:rollback:testing:db": "NODE_ENV=test knex migrate:rollback --env=test",
    "lint": "eslint src",
    "gitlab-server": "NODE_ENV=ci node src/server.js",
    "ci": "start-server-and-test gitlab-server 5000 test-end2end",
    "e2e": "start-server-and-test start 5000 test-end2end",
    "i18n-scheduler": "npx i18next 'src/jobs/certification/**/*.js' -c 'src/jobs/locales/i18next-parser.config.js'",
    "scheduler": "cp ../webapp/public/locales/en/crop.json src/jobs/locales/en && cp ../webapp/public/locales/es/crop.json src/jobs/locales/es && cp ../webapp/public/locales/pt/crop.json src/jobs/locales/pt && cp ../webapp/public/locales/fr/crop.json src/jobs/locales/fr && node src/jobs/index.js",
    "fix-lint": "eslint src --fix",
    "precommit": "lint-staged"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ]
  },
  "author": "LiteFarm",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/juice-tn/LiteFarm.git"
  },
  "dependencies": {
    "adm-zip": "^0.4.16",
    "async-file": "^2.0.2",
    "aws-sdk": "^2.931.0",
    "axios": "^0.21.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bull": "^3.22.9",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "email-templates": "^8.0.4",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "express-promise-router": "^4.0.1",
    "form-data": "^4.0.0",
    "fs-extra": "^9.0.1",
    "google-auth-library": "^6.1.3",
    "i18next": "^21.4.0",
    "i18next-fs-backend": "^1.1.4",
    "jsdom": "^16.4.0",
    "json-2-csv": "^3.14.4",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.1",
    "knex": "^0.95.11",
    "lodash": "^4.17.20",
    "multer": "^1.4.2",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.6.0",
    "npm-force-resolutions": "^0.0.10",
    "objection": "^2.2.16",
    "objection-soft-delete": "^1.0.7",
    "pg": "^8.5.1",
    "pug": "^3.0.2",
    "puppeteer": "^10.1.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "sinon": "^9.1.0",
    "ua-parser-js": "^0.7.28",
    "uuid": "^8.3.0",
    "xlsx-populate": "^1.21.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.0.0",
    "faker": "^5.1.0",
    "i18next-parser": "^5.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "start-server-and-test": "^1.11.7"
  },
  "resolutions": {
    "set-value": "^4.1.0",
    "glob-parent": "^6.0.2"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --quiet --fix"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
